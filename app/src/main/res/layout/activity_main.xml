<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- main content -->
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.heyzqt.easywb.ui.MainActivity">

        <FrameLayout
            android:id="@+id/frame_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <!-- left drawer layout-->
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/main_background_purple">

        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="蛙鹅子"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="46dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_drawer_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_settings"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/textview_drawer_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/drawer_about"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/textview_drawer_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/drawer_opinion"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/textview_drawer_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/drawer_reward"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
